{
  "name": "rpc-client-portal-backend",
  "version": "1.0.0",
  "description": "Express backend for RPC Client Portal with RBAC",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "seed:superadmin": "ts-node scripts/seed-superadmin.ts",
    "test:db": "ts-node scripts/test-db-connection.ts",
    "prisma:generate": "cd .. && prisma generate --schema=./prisma/schema.prisma",
    "prisma:migrate:dev": "cd .. && prisma migrate dev --schema=./prisma/schema.prisma",
    "prisma:migrate:deploy": "cd .. && prisma migrate deploy --schema=./prisma/schema.prisma"
  },
  "keywords": [
    "express",
    "typescript",
    "clerk",
    "rbac"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@clerk/backend": "^1.0.0",
    "@prisma/client": "^7.1.0",
    "@types/node": "^20.19.26",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "nodemon": "^3.1.4",
    "prisma": "^7.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=20.0.0 <25.0.0",
    "npm": ">=10.0.0"
  }
}
