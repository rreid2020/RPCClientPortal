// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
}

enum PlanTier {
  FREE
  STANDARD
  PREMIUM
}

enum GlobalRoleType {
  superadmin
  support
  auditor
}

model UserProfile {
  id                  String   @id @default(uuid())
  clerk_user_id       String   @unique
  is_firm_super_admin Boolean  @default(false)
  is_firm_staff       Boolean  @default(false)
  created_at          DateTime @default(now())
  updated_at          DateTime @updatedAt

  // Relations
  documents Document[]

  @@map("user_profiles")
}

model Organization {
  id           String   @id @default(uuid())
  clerk_org_id String   @unique
  name         String
  plan_tier    PlanTier @default(FREE)
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt

  // Relations
  documents Document[]

  @@map("organizations")
}

model Document {
  id                  String   @id @default(uuid())
  organization_id     String
  title               String
  description         String?
  uploaded_by_user_id String
  created_at          DateTime @default(now())
  updated_at          DateTime @updatedAt

  // Relations
  organization Organization @relation(fields: [organization_id], references: [id], onDelete: Cascade)
  uploaded_by  UserProfile  @relation(fields: [uploaded_by_user_id], references: [id], onDelete: Cascade)

  @@index([organization_id])
  @@index([uploaded_by_user_id])
  @@map("documents")
}

// RBAC: Global roles for firm-level permissions (not tied to organizations)
model GlobalRole {
  id     Int            @id @default(autoincrement())
  userId String         @unique // Clerk user ID
  role   GlobalRoleType

  @@map("global_roles")
}

// RBAC: Fine-grained user permissions (can be scoped to organizations or global)
model UserPermission {
  id         Int     @id @default(autoincrement())
  userId     String // Clerk user ID
  orgId      String? // Clerk organization ID (nullable for global permissions)
  permission String

  @@unique([userId, orgId, permission])
  @@map("user_permissions")
}
